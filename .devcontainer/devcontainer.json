{
  "name": "Vibestack DevContainer",
  "image": "ghcr.io/check-the-vibe/vibestack:latest",
  "overrideCommand": false,
  "init" : true,
  "remoteEnv": {
    "VIBE_PASSWORD": "coding"
  },
  "forwardPorts": [80],
  "portsAttributes": {
    "80": {
      "label": "Web Server",
      "onAutoForward": "openPreview",
      "requireLocalPort": false,
      "protocol": "http"
    }
  },
  "postStartCommand": "supervisorctl status || true",
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": []
    }
  },
  "remoteUser": "vibe",
  "workspaceFolder": "/workspaces/vibestack"
}
